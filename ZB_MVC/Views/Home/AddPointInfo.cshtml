@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>测点管理</title>
    <link href="@Url.Content("~/Content/themes/layout.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/styles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/tab.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/form.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/RoomSelect.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
</head>
<body>
<div class="contentcontainer">
<div class="headings altheading"><h2>测点管理</h2></div>
<div class="contentbox">
    <div id="tabs">
        <ul class="tab-ul">
		    <li><a href="@Url.Action("QueryPoint", "Home")">查询测点</a></li>
            @if (ViewBag.realFlag == 0)
            {
                <li><a href="@Url.Action("AddRealPoint", "Home")">增加真实测点</a></li>
		        <li class="current"><a>增加虚拟测点</a></li>    
            }
            else
            { 
                <li class="current"><a>增加真实测点</a></li>    
                <li><a href="@Url.Action("AddVirtualPoint", "Home")">增加虚拟测点</a></li>
            }
	    </ul>
	    <div class="tab-div padding50px">
        @if (ViewBag.flag != null)
        {
            if (ViewBag.flag == true && ViewBag.realFlag == 1)
            {
                <div class="status success">
                    <p><img src="@Url.Content("~/Content/themes/img/icon_success.png") " alt="Success" /><span>增加测点数据成功!</span>
                    
                    <a href="@Url.Action("AddRealPoint", "Home")">继续增加</a> 或 <a href="@Url.Action("QueryPoint", "Home")">重新查询</a></p>
                </div>
            }
            else if(ViewBag.flag == true && ViewBag.realFlag != 1)
            {
                <div class="status success">
                    <p><img src="@Url.Content("~/Content/themes/img/icon_success.png") " alt="Success" /><span>增加测点数据成功!</span>
                    <a href="@Url.Action("AddVirtualPoint", "Home")">继续增加</a> 或 <a href="@Url.Action("QueryPoint", "Home")">重新查询</a></p>
                </div>
            }
            else
            {
                <div class="status error">
                    <p><img src="@Url.Content("~/Content/themes/img/icon_error.png") " alt="Error" /><span>增加测点数据失败!</span>
                    尝试重新添加
                    </p>
                </div>
            }

        }
        else
        {
            <div class="status error">
                <p><img src="@Url.Content("~/Content/themes/img/icon_error.png") " alt="Error" /><span>增加测点数据有误!</span>
                请重新输入
                </p>
            </div>
        }
        
    </div></div>
</div></div>
</body>
</html>
